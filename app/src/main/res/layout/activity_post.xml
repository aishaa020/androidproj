<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productactivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp">


        <ImageView
            android:id="@+id/display_image1"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/bbs" />

        <EditText
            android:id="@+id/Product_name_pv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:hint="Product_name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:drawablePadding="4dp"
            android:text="Simple Description"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/quntity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="2dp"
            android:drawablePadding="4dp"
            android:hint="Product_quantity"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/Price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="2dp"
            android:drawablePadding="4dp"
            android:hint="Product_price"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/product_status1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="2dp"
            android:drawablePadding="4dp"
            android:hint="Product_Status"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <Spinner
            android:id="@+id/catagory1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp">


        </Spinner>

        <Button
            android:id="@+id/postt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


