<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="0dp"
        android:layout_height="190dp"
        app:cardBackgroundColor="@color/pink2"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/itemimg1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:contentDescription="@string/item_pic"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/itemlove"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/item_pic"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </RelativeLayout>




            <TextView
                android:id="@+id/txtprice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Price:"
                android:fontFamily="@font/robotomono"
                android:textColor="@color/gray"
                android:textSize="14sp">

            </TextView>
            <TextView
                android:id="@+id/name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Name:"
                android:fontFamily="@font/robotomono"
                android:textColor="@color/gray"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>




            <TextView
                   android:id="@+id/add_txt3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Add To Cart"
                   android:fontFamily="@font/robotomono"
                   android:textColor="@color/blue"
                   android:layout_gravity="center"
                   android:textStyle="bold">

               </TextView>





        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>